CC=clang++
CFLAGS=`sdl-config --cflags` -c -Wall -std=c++11 -stdlib=libc++
LDFLAGS=`sdl-config --cflags --libs` -lc++ -lstdc++ -lSDL_image -lSDL_gfx -framework Cocoa
SOURCES=d2tm.cpp vector2d.cpp map.cpp game.cpp surface.cpp random.cpp keyboard.cpp mouse.cpp unit.cpp eventfactory.cpp maploader.cpp ini.cpp INIReader.cpp unit_move_behavior.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=d2tm

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(OBJECTS) -o $@ $(LDFLAGS)

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -f *.o
	rm d2tm
